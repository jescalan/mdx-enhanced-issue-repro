{
  "name": "leerob.io",
  "description": "My personal website.",
  "version": "0.0.0",
  "author": {
    "name": "Lee Robinson",
    "email": "me@leerob.io",
    "url": "https://leerob.io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leerob/leerob.io.git"
  },
  "scripts": {
    "build": "next build",
    "dev": "next",
    "lint": "eslint . --ext .json --ext .js",
    "prettier": "prettier --write \"**/*.{html,js,json,md,mdx,mjs,yml}\"",
    "start": "next start",
    "test": "yarn lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,js,json,md,mdx,mjs,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "next": "^9.1.7",
    "next-mdx-enhanced": "^2.4.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "prettier": "2.0.1",
    "rehype": "9.0.1"
  }
}
